{
   "name": "taxi-language-server",
   "publisher": "taxi-lang",
   "displayName": "taxi-language-server",
   "description": "Language server for Taxi",
   "repository": {
      "type": "git",
      "url": "https://gitlab.com/taxi-lang/language-server"
   },
   "version": "1.28.2-SNAPSHOT",
   "engines": {
      "vscode": "^1.44.0"
   },
   "categories": [
      "Other"
   ],
   "activationEvents": [
      "onLanguage:taxi"
   ],
   "main": "./out/extension.js",
   "contributes": {
      "languages": [
         {
            "id": "taxi",
            "aliases": [
               "taxi"
            ],
            "extensions": [
               ".taxi",
               ".conf"
            ],
            "configuration": "./language-configuration.json"
         }
      ],
      "grammars": [
         {
            "language": "taxi",
            "scopeName": "source.taxi",
            "path": "./syntaxes/taxi.tmLanguage.json"
         }
      ],
      "configuration": {
         "type": "object",
         "title": "Taxi",
         "properties": {
            "taxi.typeChecker": {
               "type": "string",
               "default": "disabled",
               "enum": [
                  "enabled",
                  "disabled",
                  "soft_enabled"
               ],
               "enumDescriptions": [
                  "Enables the type checker.  Type violations are reported as errors",
                  "Disables the type checker.  Type vioaltions are not reported",
                  "Enables the type checker.  Type violations are reported as warnings"
               ]
            },
            "taxi.javaHome": {
               "type": "string",
               "default": "",
               "description": "Java Home dir - will try to autodetect if missing"
            }
         }
      }
   },
   "scripts": {
      "semantic-release": "semantic-release",
      "vscode:prepublish": "npm run sync-pom-version && npm run compile && cp ../taxi-lang-server-standalone/target/taxi-lang-server-standalone.jar out/",
      "compile": "tsc -p ./",
      "lint": "eslint src --ext ts",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile && npm run lint",
      "test": "node ./out/test/runTest.js",
      "sync-pom-version": "sync-pom-version"
   },
   "dependencies": {
      "find-java-home": "^1.1.0",
      "vscode-languageclient": "5.1.1",
      "ws": "^6.0.0"
   },
   "devDependencies": {
      "sync-pom-version-to-package": "^1.6.1",
      "semantic-release": "^17.0.7",
      "semantic-release-vsce": "^3.0.1",
      "@semantic-release/changelog": "^5.0.1",
      "@semantic-release/exec": "^5.0.0",
      "@semantic-release/git": "^9.0.0",
      "@semantic-release/gitlab-config": "^8.0.0",
      "@types/glob": "^7.1.1",
      "@types/mocha": "^7.0.2",
      "@types/node": "^13.11.0",
      "@types/vscode": "^1.44.0",
      "@types/ws": "^6.0.0",
      "@typescript-eslint/eslint-plugin": "^2.26.0",
      "@typescript-eslint/parser": "^2.26.0",
      "eslint": "^6.8.0",
      "glob": "^7.1.6",
      "mocha": "^7.1.1",
      "typescript": "^3.8.3",
      "vscode-test": "^1.3.0"
   },
   "release": {
      "verifyConditions": [
         "semantic-release-vsce",
         "@semantic-release/gitlab"
      ],
      "generateNotes": "@semantic-release/release-notes-generator",
      "prepare": {
         "path": "semantic-release-vsce",
         "packageVsix": "taxi-language-server.vsix"
      },
      "publish": [
         "semantic-release-vsce",
         {
            "path": "@semantic-release/gitlab",
            "assets": "taxi-language-server.vsix"
         }
      ]
   }
}
